<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wtcs_surface"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Tirador visual -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:alpha="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PADDOCK NAVIGATION"
        android:textColor="@color/wtcs_red"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds">

        <!-- 1. DASHBOARD -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavHome"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="12dp"
            android:padding="0dp"
            android:text="DASHBOARD"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:strokeColor="@color/wtcs_red"/>

        <!-- 2. CALENDAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavCalendar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="12dp"
            android:padding="0dp"
            android:text="CALENDAR"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_calendar_month_24"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:strokeColor="@color/wtcs_red"/>

        <!-- 3. STANDINGS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavStandings"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="12dp"
            android:padding="0dp"
            android:text="STANDINGS"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_format_list_numbered_24"
            app:iconTint="@color/white"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:strokeColor="@color/wtcs_red"/>

        <!-- 4. DRIVERS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavDrivers"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="12dp"
            android:padding="0dp"
            android:text="DRIVERS"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            app:strokeColor="@color/text_secondary"
            app:iconGravity="textStart"/>

        <!-- 5. TEAMS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavTeams"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="6dp"
            android:padding="0dp"
            android:text="TEAMS"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            app:strokeColor="@color/text_secondary"
            app:iconGravity="textStart"/>

        <!-- 6. NEWS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavNews"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_marginStart="6dp"
            android:padding="0dp"
            android:text="NEWS"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            app:strokeColor="@color/text_secondary"
            app:iconGravity="textStart"/>

    </GridLayout>
</LinearLayout>