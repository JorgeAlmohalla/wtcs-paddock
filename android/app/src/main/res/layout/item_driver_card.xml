<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDriver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/wtcs_surface"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- 1. AVATAR (Izquierda) -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_bg_gray"/>

            <TextView
                android:id="@+id/tvInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="AM"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </FrameLayout>

        <!-- 2. INFO PRINCIPAL (Centro) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alex Mancinelli"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <!-- Equipo (Visible en lista general) / Rol (Visible en Roster) -->
            <!-- Usaremos este mismo TextView para ambos casos o lo cambiamos por cÃ³digo -->
            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alfa Romeo Nordauto"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Rol + Bandera (EspecÃ­fico para Roster) -->
            <TextView
                android:id="@+id/tvRosterRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ðŸ‡®ðŸ‡¹ PRIMARY"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:visibility="gone"/> <!-- Oculto por defecto, lo activamos en el adapter -->

        </LinearLayout>

        <!-- 3. DERECHA (Badge Principal y Bandera antigua) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- BADGE TEAM PRINCIPAL (Dorado) -->
            <TextView
                android:id="@+id/badgePrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Principal"
                android:textSize="10sp"
                android:textColor="#FFD700"
                android:background="#26FFD700"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone"/>

            <!-- Bandera (Para la lista general de drivers) -->
            <TextView
                android:id="@+id/tvFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ðŸ‡®ðŸ‡¹"
                android:textSize="20sp"
                android:layout_marginTop="4dp"/>

            <!-- Rol GenÃ©rico (Para lista general) -->
            <TextView
                android:id="@+id/tvRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DRIVER"
                android:textColor="@color/wtcs_red"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>