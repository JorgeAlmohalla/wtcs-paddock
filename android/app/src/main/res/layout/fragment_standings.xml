<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wtcs_background">

    <!-- CABECERA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wtcs_surface"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHAMPIONSHIP"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:letterSpacing="0.05"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STANDINGS"
            android:textColor="@color/wtcs_red"
            android:textStyle="bold"
            android:textSize="24sp"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <!-- PESTAÃ‘AS -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutStandings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wtcs_surface"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/wtcs_red"
        app:tabIndicatorColor="@color/wtcs_red"
        app:tabMode="fixed"
        app:tabGravity="fill"/>

    <!-- CONTENIDO -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerStandings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>