<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/wtcs_surface"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0dp"
    app:contentPadding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. BADGE STATUS (Izquierda Arriba) -->
        <TextView
            android:id="@+id/tvReportStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#FFA000"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 2. CARRERA (Derecha Arriba) -->
        <TextView
            android:id="@+id/tvReportRace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Silverstone GP"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="end"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvReportStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvReportStatus"
            app:layout_constraintBottom_toBottomOf="@+id/tvReportStatus"/>

        <!-- SEPARADOR -->
        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReportStatus"/>

        <!-- 3. DETALLES (Abajo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/separator">

            <!-- Quién contra Quién -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvReportRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You Reported"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" → "
                    android:textColor="@color/wtcs_red"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvReportInvolved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evan Pardy"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Decisión -->
            <TextView
                android:id="@+id/tvReportDecision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decision: Under Review"
                android:textColor="#FFD700"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>