<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wtcs_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <!-- 1. CABECERA REFORMADA (Logo + Info) -->
        <FrameLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#192e8a"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- LOGO DEL EQUIPO (Nuevo) -->
                <ImageView
                    android:id="@+id/imgTeamDetailLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_menu_grid"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_bg_gray"
                    android:padding="8dp"/> <!-- Padding para que el logo respire dentro del círculo -->

                <!-- TEXTOS (A la derecha del logo) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvHeaderType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WORKS TEAM"
                        android:textColor="#CCFFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Ford Performance Blue Ridge Racing"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvDetailCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Ford Mondeo Zetec"
                        android:textColor="@color/white"
                        android:background="#33000000"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- 1.5. BIO DEL EQUIPO (Nuevo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM BIOGRAPHY"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvTeamBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No biography available for this team."
                android:textColor="@color/white"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"/>

        </LinearLayout>

        <!-- 2. STATS GRID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <include layout="@layout/item_stat_card" android:id="@+id/statDrivers"/>
            <include layout="@layout/item_stat_card" android:id="@+id/statWins"/>
            <include layout="@layout/item_stat_card" android:id="@+id/statPodiums"/>
            <include layout="@layout/item_stat_card" android:id="@+id/statPoints"/>
        </LinearLayout>

        <!-- 3. TEAM ROSTER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM ROSTER"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginHorizontal="16dp"/>

        <!-- 4. OFFICIAL LIVERY -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFFICIAL LIVERY"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/wtcs_surface">

            <ImageView
                android:id="@+id/imgLivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@android:color/darker_gray"/>
        </androidx.cardview.widget.CardView>

        <!-- 5. SPECS TABLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOMOLOGATION DATA"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/specsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/wtcs_surface"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <!-- 1. CHASSIS (Permitimos multilínea) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="CHASSIS"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvSpecChassis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Unitary steel, built by Prodrive/Matter"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:gravity="end"/> <!-- Alineado a la derecha como en la web -->
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1AFFFFFF"/>

            <!-- 2. ENGINE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ENGINE"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvSpecEngine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Cosworth 2.0L V6"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:gravity="end"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1AFFFFFF"/>

            <!-- 3. POWER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="POWER"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvSpecPower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="300HP"
                    android:textColor="@color/wtcs_red"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:gravity="end"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1AFFFFFF"/>

            <!-- 4. LAYOUT (NUEVO, reemplaza a Weight) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="LAYOUT"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvSpecLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="FR"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1AFFFFFF"/>

            <!-- 5. GEARBOX -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="GEARBOX"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvSpecGearbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="XTrac 6-speed"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>