<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardTeam"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/wtcs_surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="2dp"
    app:strokeColor="#FFFFFF"> <!-- Color por defecto, se cambiará en Java -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 1. FRANJA DE COLOR (Izquierda) -->
        <View
            android:id="@+id/viewTeamStrip"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#FF0000"/>

        <!-- CONTENEDOR DE CONTENIDO -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- Nombre Equipo (Max 2 líneas para nombres largos) -->
            <TextView
                android:id="@+id/tvTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alfa Romeo Nordauto Engineering"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"/>

            <!-- Coche -->
            <TextView
                android:id="@+id/tvCarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alfa Romeo 156 Superturismo"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 3. BADGE (Alineado a la derecha) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tvTeamType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="WORKS"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:background="#204CAF50"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>