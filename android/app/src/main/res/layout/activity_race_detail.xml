<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wtcs_background">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/wtcs_surface"
        android:gravity="center">

        <TextView
            android:id="@+id/tvDetailRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROUND 1"
            android:textColor="@color/wtcs_red"
            android:letterSpacing="0.1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONINGTON PARK"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‡¬ðŸ‡§ 11 OCT 2025"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- PESTAÃ‘AS (Tabs) -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wtcs_surface"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/wtcs_red"
        app:tabIndicatorColor="@color/wtcs_red"
        app:tabMode="fixed"
        app:tabGravity="fill"/>

    <!-- CONTENIDO CAMBIANTE -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>