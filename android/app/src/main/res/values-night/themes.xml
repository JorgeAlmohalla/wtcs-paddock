<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- FÍJATE AQUÍ: "Theme.WTCSPaddock" coincidiendo con el Manifest -->
    <style name="Theme.WTCSPaddock" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Tus colores personalizados -->
        <item name="colorPrimary">@color/wtcs_red</item>
        <item name="colorPrimaryVariant">@color/wtcs_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/wtcs_background</item>
        <item name="colorSurface">@color/wtcs_surface</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:statusBarColor">@color/wtcs_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Estilo de los inputs -->
    <style name="WtcsInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/wtcs_surface</item>
        <item name="boxStrokeColor">@color/wtcs_red</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="hintTextColor">@color/wtcs_red</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>

    <style name="WhiteCursorSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="searchIcon">@drawable/ic_menu_grid</item> <!-- O un icono de lupa si tienes -->
    </style>

    <!-- Estilo para imágenes circulares -->
    <style name="CircleImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>